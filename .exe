rece() {
clear
vrytecb
echo

files=$(ls *.sh 2> /dev/null)
echo -e "${bcyan}File Recently Edited :${reset}"

if [[ `ls *.sh 2> /dev/null` ]]; then
    echo -e "${purple}$files${reset}"
else
    echo -e "${yellow}No Files Recently Edited${reset}"
fi

echo -e "${green}[${yellow}B${green}]${reset} Back To Home"
echo

echo -e -n "${green}Open Recently File Without [${yellow}.sh${green}] : ${reset}"; read oprec
echo

ofn=$(echo "$oprec" | tr -d '[:space:]')

case "$oprec" in
  *.sh)
  sleep 1
    echo -e "${yellow}Can't Open The File With [${green}.sh${yellow}] Extension.${reset}"
    sleep 2
    rece
    ;;
    B | b )
    sleep 1
    echo -e "${yellow}Back To Home${reset}"
    sleep 2
    home
    ;;
  *)
    if [ -f "$oprec.sh" ]; then
      sleep 1
      echo -e "${yellow}Opening ${green}$oprec.sh${yellow} Wait"
      sleep 2
      omenu
    else
      sleep 1
      echo -e "${yellow}Invalid Selection Or No Action Epecified For The Entered File.${reset}"
      sleep 2
      rece
    fi
    ;;
esac
}

home() {
clear
sleep 3
vrytecb
sleep 2
echo

echo -e "${green}[${yellow}G${green}]${reset} Generate File"
echo -e "${green}[${yellow}O${green}]${reset} Open Recent Files"
echo -e "${green}[${yellow}E${green}]${reset} Exit "
echo -e "[U] Delete Tweak Generator"
echo

echo -e -n "${green}Select an Option : ${reset}"; read hc
echo

case $hc in
  G | g )
  sleep 1
  echo -e -n "${green}File Name : ${reset}"; read fn
  touch .$fn
  touch $fn.sh
  chmod +x .$fn
  chmod +x $fn.sh
  echo -n "#!" >> .$fn; echo -n "/bin" >> .$fn; echo "/sh" >> .$fn
  echo -n "#!" >> $fn.sh; echo -n "/bin" >> $fn.sh; echo "/sh" >> $fn.sh
  menu
  ;;
  O | o )
  clear
  sleep 2
  rece
  ;;
  E | e )
  sleep 1
  echo -e "${yellow}Exiting Tweaks Generator ${reset}"
  sleep 2
  exit 0
  ;;
  U | u )
  sleep 1
  echo -e "${yellow}Uninstalling Tweak Generator${reset}"
  sleep 2
  bash $PREFIX/Vrytec/.uninstall
  ;;
  * )
  sleep 1
  echo -e "${yellow}Invalid Option, Select a Valid Option${reset}"
  sleep 2
  home
  ;;
esac
}

