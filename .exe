  echo "echo 'New Line'" >> .$fn
  echo "echo
 " >> $fn.sh
  menu
  ;;
  G | g )
  sleep 1
  echo "echo 'Generated The File'" >> .$fn
  echo -e "${yellow}The File Generated And Moved To /sdcard/Vrytec${reset}"
  mv $fn.sh /sdcard/Vrytec
  rm -rf .$fn
  sleep 2
  home
  ;;
  D | d )
  sleep 1
  echo "echo 'Deleted The File'" >> .$fn
  echo -e "${yellow}The File Has Been Deleted${reset}"
